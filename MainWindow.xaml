<Window x:Class="Co_work.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Co_work"
        mc:Ignorable="d"
        Title="Co-Work" Height="648" Width="1152"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" SizeToContent="Manual" WindowState="Maximized" Closing="Window_Closing" Icon="/Co-work.ico">
    <Grid>
        <Grid Background="White">
            <Grid x:Name="nav"
                  HorizontalAlignment="Left"
                  Width="113"
                  Background="#FF09052B">

                <StackPanel x:Name="stp">
                    <Grid Height="1080">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="193*"/>
                        </Grid.RowDefinitions>
                        <ToggleButton x:Name="Tg_Btn_Project"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Center"
                                      Height="88"
                                      Width="180"
                                      BorderThickness="0" Margin="0,46,0,0"
                                      Background="{x:Null}" Click="Tg_Btn_Project_Click">

                            <Label Content="项目" 
                               FontSize="19" Foreground="White"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" Width="180" Height="83"/>

                        </ToggleButton>

                        <ToggleButton x:Name="Tg_Btn_Transmission"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Height="88"
                            Width="180"
                            BorderThickness="0" Margin="0,134,0,0" Background="{x:Null}" Grid.RowSpan="2"
                                       Click="Tg_Btn_Transmission_Click">

                            <Label Content="传输" 
                               FontSize="19" Foreground="White" Width="170" Height="90"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"></Label>
                        </ToggleButton>

                        <ToggleButton x:Name="Tg_Btn_User"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Height="88"
                            Width="180"
                            BorderThickness="0" Margin="0,222,0,0" Background="{x:Null}"
                                       Click="Tg_Btn_User_Click" Grid.Row="1" Grid.RowSpan="2">

                            <Label Content="个人" 
                               FontSize="19" Foreground="White" Width="170" Height="90"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"></Label>
                        </ToggleButton>

                        <ToggleButton x:Name="Tg_Btn_Setting"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Height="88"
                            Width="180"
                            BorderThickness="0" Margin="0,310,0,0" Background="{x:Null}" Grid.Row="2"
                                      Click="Tg_Btn_Setting_Click">

                            <Label Content="设置" 
                               FontSize="19" Foreground="White"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" Width="180" Height="88"></Label>
                        </ToggleButton>

                    </Grid>

                </StackPanel>

            </Grid>

        </Grid>

        <ContentControl Name="Change_Page" Margin="113,0,0,0"
                        Width="1920"
                        Height="1080"/>

    </Grid>
</Window>
