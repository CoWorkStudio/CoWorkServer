<Page x:Class="Co_work.Pages.Page_Transmission_Upload"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Co_work.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Transmission_Upload">

    <Grid Background="White">
        <ListView Name="Lv_ListUpload"
                 HorizontalAlignment="left"
                 VerticalAlignment="Top"
                 Width="800"
                 Height="700" Margin="20,20,0,0" BorderThickness="0,0,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="test" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Name="Pb_UploadProgress"
                                             Width="200"
                                             Height="20"
                                             Value ="{Binding percent, UpdateSourceTrigger=Explicit}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
