                        Height="185"
                        Width="200"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        BorderThickness="0,0,0,0"
                        Margin="20, 20, 0, 0"
                        Background="White">
                    <Label Content ="+添加项目" FontSize="20"
                   Height="105" Width="110"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center" Foreground="#FF6E6E6E" HorizontalAlignment="Center" VerticalAlignment="Center"/>
